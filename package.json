{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rm -rf node_modules package-lock.json .prisma",
    "install:deps": "npm install --ignore-scripts --foreground-scripts=false",
    "install:prisma-manual": "npx prisma generate --schema=./src/prisma/schema.prisma",
    "install:complete": "npm run install:deps && npm run install:prisma-manual",
    "postinstall": "npm run install:complete",
    "dev": "npm run install:complete && nest start --watch",
    "build": "npm run install:prisma-manual && nest build",
    "start": "nest start",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:seed": "ts-node src/prisma/seed.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/platform-express": "10.3.10",
    "@prisma/client": "5.10.2",
    "@sendgrid/client": "^8.1.5",
    "@sendgrid/mail": "^8.1.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "date-fns": "^4.1.0",
    "firebase-admin": "^13.5.0",
    "liquidjs": "^10.21.1",
    "marked": "^16.3.0",
    "papaparse": "^5.5.3",
    "react-intersection-observer": "^9.16.0",
    "reactflow": "^11.11.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@nestjs/cli": "^10.4.2",
    "@nestjs/schematics": "^10.1.3",
    "@nestjs/testing": "10.3.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/marked": "^5.0.2",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.14.12",
    "@types/papaparse": "^5.3.16",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "dotenv": "^17.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.3.3",
    "prisma": "5.10.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.3",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma",
    "seed": "ts-node src/prisma/seed.ts"
  }
}
